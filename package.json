{
  "name": "@github/agentic-workflow-firewall",
  "version": "0.11.1",
  "description": "Network firewall for agentic workflows with domain whitelisting",
  "main": "dist/cli.js",
  "bin": {
    "awf": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit -p tsconfig.check.json",
    "test": "jest",
    "test:unit": "jest --config jest.config.js",
    "test:integration": "jest --config tests/setup/jest.integration.config.js",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:lint-rules": "node eslint-rules/no-unsafe-execa.test.js",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "prepare": "husky",
    "docs:dev": "cd docs-site && npm run dev",
    "docs:build": "cd docs-site && npm run build",
    "docs:preview": "cd docs-site && npm run preview"
  },
  "keywords": [
    "agentic-workflows",
    "firewall",
    "network-restrictions",
    "ai-agents",
    "coding-agents",
    "security",
    "domain-whitelisting",
    "proxy",
    "squid",
    "agent",
    "mcp",
    "egress-control"
  ],
  "author": "GitHub",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "execa": "^5.1.1",
    "js-yaml": "^4.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@playwright/test": "^1.58.0",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.0.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-rulesdir": "^0.2.2",
    "eslint-plugin-security": "^3.0.1",
    "glob": "^10.5.0",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "playwright": "^1.58.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "node_modules/chalk/**/*",
      "containers/agent/seccomp-profile.json"
    ],
    "targets": [
      "node18-linux-x64"
    ]
  }
}
